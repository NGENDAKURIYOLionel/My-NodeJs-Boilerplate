{
  "name": "smart-node",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest --coverage",
    "start": "nodemon main.js"
  },
  "engines": {
    "npm": ">= 10.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    },
    "extends": [
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true,
      "es6": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": [
      "prettier"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "coverageReporters": [
      "text",
      "html",
      "cobertura"
    ]
  },
  "author": "Lionel Ngendakuriyo",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.2",
    "bcrypt": "^3.0.6",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.15.1",
    "bunyan": "^1.8.12",
    "connect-redis": "^4.0.2",
    "content-filter": "^1.0.22",
    "dotenv": "^8.1.0",
    "express": "^4.14.0",
    "express-content-length-validator": "^1.0.0",
    "express-session": "^1.5.0",
    "express-validator": "2.20.5",
    "helmet": "^3.15.0",
    "hpp": "^0.2.1",
    "jest": "^25.0.0",
    "jest-junit": "^8.0.0",
    "mongoose": "^5.7.1",
    "node-cron": "^2.0.3",
    "npm": "^6.11.3",
    "pino": "^5.13.3",
    "pino-pretty": "^3.2.1",
    "redis": "^2.6.2",
    "redis-mock": "^0.46.0",
    "serve-favicon": "^2.3.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "eslint": "^5.6.1",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3"
  }
}
